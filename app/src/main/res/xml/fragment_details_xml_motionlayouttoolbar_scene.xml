<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000"
        motion:motionInterpolator="linear">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/backgroundView"
               motion:framePosition="5"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@+id/navigationBackBtn"
               motion:framePosition="15" />
           <KeyAttribute
               motion:motionTarget="@+id/toolbarTitle"
               motion:framePosition="40"
               android:alpha="0.1" />
           <KeyAttribute
               motion:motionTarget="@+id/toolbarTitle"
               motion:framePosition="45"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@+id/toolbarSubtitle"
               motion:framePosition="40"
               android:alpha="0.1" />
           <KeyAttribute
               motion:motionTarget="@+id/toolbarSubtitle"
               motion:framePosition="45"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@+id/navigationBackBtn"
               motion:framePosition="15" >
               <CustomAttribute
                   motion:attributeName="colorFilter"
                   motion:customColorValue="?attr/colorOnPrimary" />
           </KeyAttribute>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/navigationBackBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" >
            <CustomAttribute
                motion:attributeName="colorFilter"
                motion:customColorValue="?attr/colorOnSurface" />
        </Constraint>
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@id/navigationBackBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="0"
            motion:layout_constraintTop_toTopOf="parent"
            android:id="@+id/toolbarTitle"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="16dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/backgroundView"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:alpha="1"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/toolbarTitle"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@id/navigationBackBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="1"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp" />
        <Constraint
            android:id="@+id/toolbarSubtitle"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@id/navigationBackBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/toolbarTitle"
            android:alpha="1"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="16dp" />
        <Constraint
            android:id="@+id/navigationBackBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" >
            <CustomAttribute
                motion:attributeName="colorFilter"
                motion:customColorValue="?attr/colorOnPrimary" />
        </Constraint>
    </ConstraintSet>
</MotionScene>