<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="App.GithubButton" parent="Widget.Material3.Button">
        <item name="android:text">GitHub</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="icon">@drawable/ic_github</item>
        <item name="backgroundTint">?attr/colorOnSurface</item>
    </style>

    <style name="App.TextAppearance.CollapseToolbar.Tittle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/jetbrains_mono_reguler</item>
        <item name="fontFamily">@font/jetbrains_mono_reguler</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxHeight">44dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
    </style>

    <style name="App.TextAppearance.CollapseToolbar.SubTittle" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/jetbrains_mono_reguler</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxHeight">24dp</item>
    </style>

    <style name="App.NavigationButton" parent="">
        <item name="android:src">@drawable/ic_arrow_back</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorSurface">?attr/colorSurface</item>
        <item name="colorOnSurface">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/jetbrains_mono_reguler</item>
        <item name="android:fontFamily">@font/jetbrains_mono_reguler</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Base.TextAppearance.App" parent="">
        <item name="fontFamily">@font/jetbrains_mono_reguler</item>
        <item name="android:fontFamily">@font/jetbrains_mono_reguler</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="App.TextAppearance" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Theme.App.NavigationButton" parent="">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="titleTextAppearance">@style/App.TextAppearance</item>
        <item name="android:src">@drawable/ic_arrow_back</item>
    </style>

</resources>